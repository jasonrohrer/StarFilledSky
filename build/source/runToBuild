#!/bin/bash

#
# Modification History
#
# 2010-April-2        Andy Sommerville
# - Added a few "|| exit 1" to terminate as soon as error occurs.
# - Read menu choice from argv[1].
# - Added "-p" to mkdir to suppress "already exists" message.
# - Added automatic backup of "resourceCache". (wish I'd thought of that a few minutes ago....)
#
# 2007-November-12    Jason Rohrer
# Copied from Cultivation.
#


cd game10
chmod u+x ./configure
./configure $@ || exit 1




cd gameSource


echo "Building StarFilledSky..."

make || exit 1



cd ../..

mkdir -p graphics
mkdir -p settings
mkdir -p languages




cp game10/gameSource/StarFilledSky ./StarFilledSkyApp
cp game10/documentation/Readme.txt .
cp game10/documentation/Upgrading.txt .
cp game10/gameSource/graphics/* ./graphics
cp game10/gameSource/settings/* ./settings
cp game10/gameSource/languages/* ./languages
cp game10/gameSource/language.txt ./



echo "Run StarFilledSkyApp to play."




