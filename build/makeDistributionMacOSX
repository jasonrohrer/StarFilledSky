#!/bin/sh

#
# Modification History
#
# 2007-November-12   Jason Rohrer
# Copied from Cultivation build.
#


if [ $# -lt 3 ] ; then
   echo "Usage: $0 release_name unix_platform_name path_to_SDL.framework"
   exit 1
fi


rm -rf mac

mkdir mac



mkdir mac/StarFilledSky
mkdir mac/StarFilledSky/graphics
mkdir mac/StarFilledSky/settings
mkdir mac/StarFilledSky/languages



cp ../gameSource/graphics/*.tga mac/StarFilledSky/graphics
cp ../gameSource/settings/*.ini mac/StarFilledSky/settings
cp ../gameSource/languages/*.txt mac/StarFilledSky/languages
cp ../gameSource/language.txt mac/StarFilledSky
cp ../documentation/Readme.txt mac/StarFilledSky




cp -r macOSX/StarFilledSky.app mac/StarFilledSky/StarFilledSky.app
cp ../gameSource/StarFilledSky mac/StarFilledSky/StarFilledSky.app/Contents/MacOS

rm -r mac/StarFilledSky/StarFilledSky.app/Contents/MacOS/empty.txt
rm -r mac/StarFilledSky/StarFilledSky.app/Contents/Frameworks/empty.txt

# install SDL framework
cp -r $3 mac/StarFilledSky/StarFilledSky.app/Contents/Frameworks/

cd mac
tar cf "StarFilledSky_$1_$2.tar" StarFilledSky
gzip "StarFilledSky_$1_$2.tar"






